<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/head') %>
</head>

<body>

    <%- include("../partials/nav") %>
        <br /><br />
        <div class="container">
            <h2>
                <%= title %>
            </h2> <br />
            <a class="btn btn-secondary" href="/employees/create">Add Employee</a>
            <br /><br />
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Position</th>
                        <th>Salary</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<employees.length;i++) { %>
                        <tr>
                            <td>
                                <%= employees[i].name %>
                            </td>
                            <td>
                                <%= employees[i].address %>
                            </td>
                            <td>
                                <%= employees[i].position %>
                            </td>
                            <td>
                                <%= employees[i].salary %>
                            </td>
                            <td>
                                <a href="/employees/<%= employees[i]._id %>" class="btn btn-secondary">View Details</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
</body>

</html>